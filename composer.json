{
    "name": "tt/no-bump-posts",
    "description": "Un'estensione di Flarum che impedisce ai post di risalire in cima quando commentati.",
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "tT",
            "email": "tuo@email.com"
        }
    ],
    "require": {
        "flarum/core": "^1.0"
    },
    "extra": {
        "flarum-extension": {
            "title": "No Bump Posts",
            "icon": {
                "name": "fas fa-arrow-down",
                "backgroundColor": "#ff5733",
                "color": "#ffffff"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "tT\\NoBumpPosts\\": "src/"
        }
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}